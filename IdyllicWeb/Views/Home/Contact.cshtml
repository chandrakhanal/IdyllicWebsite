@{
    ViewBag.Title = "Get In Touch";
}
<main>
    <!-- breadcrumb-area -->
    <section class="breadcrumb-area d-flex align-items-center breadcrumb-bg" data-background="/content/img/bg/breadcrumb_bg.png">
        <div class="container">
            <div class="row">
                <div class="col-lg-10">
                    <div class="breadcrumb-wrap">
                        <h2>@ViewBag.Title</h2>
                        <p>The story of how Techbrills came to be.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb-area-end -->
    <!-- contact-info-area -->
    <section class="contact-info-area pt-150 pb-70">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6">
                    <div class="c-cta-wrap mb-30">
                        <div class="c-cta-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="c-cta-contact">
                            <h5>Email Address</h5>
                            <span>techbrills@gmail.com</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="c-cta-wrap mb-30">
                        <div class="c-cta-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="c-cta-contact">
                            <h5>Phone Number</h5>
                            <span>+91 704 769 7427</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <div class="c-cta-wrap mb-30">
                        <div class="c-cta-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="c-cta-contact">
                            <h5>Office</h5>
                            <span>Ramkrishna Nagar, Siliguri Jn,</span>
                            <span>Siliguri, India</span>
                            <span>Pin 734003</span>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6">
                    <!--<div class="c-cta-wrap mb-30">
                        <div class="c-cta-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="c-cta-contact">
                            <h5>Nepal Office</h5>
                            <span>New Amda Rd,</span>
                            <span>Damak 57217, Jhapa</span>
                            <span>Nepal</span>
                        </div>
                    </div>-->
                </div>
            </div>
        </div>
    </section>
    <!-- contact-info-area-end -->
    <!-- contact-area -->
    <section class="contact-area pb-150">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="contact-map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3563.56185592844!2d88.40425121499386!3d26.726440883208152!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x39e441318769d8b1%3A0xdd3169a48952358a!2sTechbrills!5e0!3m2!1sen!2sin!4v1613313736586!5m2!1sen!2sin" width=100% height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="contact-title mb-35">
                        <span>Get In Touch</span>
                        <h2>We Are Here For You</h2>
                    </div>
                    <div class="contact-form">
                        <form action="#">
                            <div class="contact-field">
                                <input type="text" placeholder="Enter your name here....">
                                <i class="far fa-user"></i>
                            </div>
                            <div class="contact-field">
                                <input type="email" placeholder="Enter your email here....">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="contact-field c-message-field">
                                <textarea name="message" id="message" cols="30" rows="10"
                                          placeholder="Enter your message here...."></textarea>
                                <i class="fas fa-pencil-alt"></i>
                            </div>
                            <button class="btn mt-20">Submit Now</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- contact-area-end -->
</main>
